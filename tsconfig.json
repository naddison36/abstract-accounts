{
    "compilerOptions": {
        "outDir": "./dist/",
        "target": "ES2020",
        "lib": ["dom", "ES2022"],
        "module": "CommonJS",
        "declaration": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "sourceMap": true,
        "noImplicitAny": false,
        "allowJs": false,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "rootDir": ".",
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["./src/**/*.ts"],
    "files": [
        "./hardhat.config.ts",
    ]
}
