{
    "compilerOptions": {
        "outDir": "./dist/",
        "target": "ES2020",
        "lib": [
            "dom",
            "ES2022"
        ],
        "module": "CommonJS",
        "declaration": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "sourceMap": true,
        "noImplicitAny": false,
        "allowJs": false,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "rootDir": "."
    },
    "include": [
        "./src/**/*.ts",
        "./test/**/*.ts"
    ],
    "files": [
        "./hardhat.config.ts",
        "./hardhat-fork.config.ts",
        "./tasks.config.ts",
        "./tasks-fork.config.ts"
    ]
}